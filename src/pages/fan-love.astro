    <meta property="og:url" content="https://weddinghangover.com/fan-love" />
    <meta property="og:image" content="/images/fan/fan.webp" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Fan Love | Wedding Photo Hangover" />
