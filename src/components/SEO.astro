---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  pubDate?: Date;
  canonicalUrl?: string;
}

const {
  title,
  description = "Wedding Photo Hangover â€” A wedding photography podcast and blog.",
  image = "https://weddinghangover.com/images/global/WPH_Wide_CleanNB.webp",
  pubDate,
  canonicalUrl = Astro.url.pathname,
} = Astro.props;

const siteUrl = "https://weddinghangover.com";
const fullUrl = `${siteUrl}${canonicalUrl}`;
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={fullUrl} />

  <!-- Open Graph -->
  <meta property="og:site_name" content="Wedding Photo Hangover - A Wedding Photography Podcast" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:url" content={fullUrl} />
  <meta property="og:type" content="article" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <!-- Schema.org (Google) -->
  <meta itemprop="name" content={title} />
  <meta itemprop="description" content={description} />
  <meta itemprop="url" content={fullUrl} />
  {image && <meta itemprop="image" content={image} />}

  {pubDate && <meta property="article:published_time" content={pubDate.toISOString()} />}
</head>
